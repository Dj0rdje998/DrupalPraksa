<form action="/action_page.php">
  <label for="file_type">Choose the export file type:</label>
  <select name="file_type" id="file_type">
    <option value="csv">CSV</option>
    <option value="xml">XML</option>
  </select>
  <br><br>
  <input type="button" id="submit" value="Submit">
</form>


<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>


<script>
$(document).ready(function(){
  $("#submit").click(function(){
    let fileType = $("#file_type").val();
    $.ajax({
        url:"http://drupal.praksa/"+fileType+"-export-movies."+fileType+"?page&_format="+fileType,
        crossDomain: true,
        headers: {
            'Accept' : 'text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8,application/signed-exchange;v=b3;q=0.9',
            },
        success: function(){
          window.location = "http://drupal.praksa/"+fileType+"-export-movies."+fileType+"?page&_format="+fileType;
        },
    });
 });
});
</script>